  "license": "you",
  "bin": "./bin/cli.js",
  "scripts": {
    "test": "jest --config ./jest/jest.config.js --coverage --passWithNoTests",
    "build:main": "cross-env NODE_ENV=production webpack --config ./config/webpack.main.prod.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./config/webpack.renderer.prod.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "start:renderer-dev": "webpack-dev-server --config ./config/webpack.renderer.dev.config.js",
    "start:main-dev": "webpack --config ./config/webpack.main.config.js && electron ./dist/main.js",
    "start:dev": "cross-env START_HOT=1 npm run start:renderer-dev",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "pack": "npm run build && electron-builder --dir"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.2",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@hot-loader/react-dom": "^16.11.0",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "^24.9.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.6",
    "@types/redux-logger": "^3.0.7",
    "@types/styled-components": "4.4.2",
    "@types/webdriverio": "5.0.0",
    "@types/webpack-env": "^1.15.0",
    "babel-loader": "8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "6.0.3",
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0",
    "electron-devtools-installer": "2.2.4",
    "file-loader": "5.0.2",
    "fork-ts-checker-webpack-plugin": "^4.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "^4.0.10",
    "image-webpack-loader": "6.0.0",
    "jest": "^24.9.0",
    "lint-staged": "9.5.0",
    "prettier": "^1.19.1",
    "react-hot-loader": "^4.12.18",
    "react-test-renderer": "^16.12.0",
    "redux-devtools-extension": "^2.13.8",
    "source-map-loader": "0.2.4",
    "spectron": "9.0.0",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "history": "^4.10.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "styled-components": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{js,ts,tsx,json,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "build": {
    "productName": "any",
    "mac": {
      "category": "development"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  }
}
